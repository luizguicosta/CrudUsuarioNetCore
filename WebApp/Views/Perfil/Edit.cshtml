@model Domain.Entities.Perfil

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar perfil</h1>

<h4>Perfil</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden="hidden" asp-for="IdPerfil" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NomePerfil" class="control-label"></label>
                <input asp-for="NomePerfil" class="form-control" />
                <span asp-validation-for="NomePerfil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
