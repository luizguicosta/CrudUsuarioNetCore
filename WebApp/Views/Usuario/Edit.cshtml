@model Domain.Entities.Usuario

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Usuário</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <input hidden="hidden" asp-for="IdUsuario" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdPerfil" class="control-label"></label>
                @Html.DropDownListFor(p => p.IdPerfil, new SelectList(ViewBag.Perfis, "IdPerfil", "NomePerfil"), new { @class = "form-control" })
                <span asp-validation-for="IdPerfil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" /> |
                <a class="btn btn-info" asp-action="Index">Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
